<?xml version="1.0" encoding="UTF-8"?>

	<!-- Ensure YES/NO settings are in ALL CAPS!! -->

<settings>

	<versionNumber>0.2</versionNumber>

	<!-- Change to NO to suppress the version number -->
	<showVersionNumber>NO</showVersionNumber>

	<!-- Change to YES to enable anti-piracy checking -->
	<piracy>NO</piracy>
	<piracyURL>http://www.anti-piracy-URL-goes-here</piracyURL>

	<!-- Change to NO to disable the rotate screen -->
	<rotateScreen>YES</rotateScreen>

	<!-- Change to the width (in pixels) below which the game will start to scale on smaller devices/containers -->
	<scaleBelow>960</scaleBelow>

<!-- INTERNATIONAL SWITCHES -->

	<!-- Change to NO to switch to international fonts -->
	<english>YES</english>

	<!-- Change to NO to turn off VO -->
	<vo>YES</vo>

	<!-- Change to NO to switch off the hint overlay on the map screen -->
	<mapHint>YES</mapHint>

	<!-- Change to NO to switch off the area names on the map screen -->
	<areaNames>YES</areaNames>

	<!-- Change to NO to switch off the mission names on the map sub screens -->
	<missionNames>YES</missionNames>

	<!-- Change to NO to switch off any Power Rangers characters/content -->
	<powerRangers>YES</powerRangers>

	<!-- Change to NO to switch off any Alvin characters/content -->
	<alvin>YES</alvin>

<!-- DEBUG/TESTING SWITCHES *** These must be set to NO for deployment *** -->

	<!-- Change to YES to show FPS in the top left corner of the screen -->
	<showFPS>NO</showFPS>

	<!-- DO NOT EDIT BELOW HERE - USED FOR INTERNAAL AOP TESTING ONLY!!! -->

	<testLite>NO</testLite>

	<testMobile>NO</testMobile>

	<testMode>NO</testMode>

	<showDebugInfo>NO</showDebugInfo>

</settings>